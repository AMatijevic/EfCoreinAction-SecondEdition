@model BookApp.ServiceLayer.DefaultSql.Books.Dtos.AddPromotionDto

<h2>Add Book Promotion</h2>

    <form asp-controller="Admin" asp-action="AddPromotion" method="post">
        <!-- Input and Submit elements -->
        <input name="BookId" type="hidden" value="@Model.BookId"/>

        <div class="form-group">
            <div class="col-sm-2">
                <label>Book Title</label>
            </div>
            <div class="col-sm-10">
                @ViewData["BookTitle"]
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <label>Org Price</label>
            </div>
            <div class="col-sm-2">
                @ViewData["OrgPrice"]
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label>New Price</label>
            </div>
            <input asp-for="ActualPrice" class="form-control col-sm-2"/>
        </div>

        <div class="form-group">

            <div class="col-sm-2">
                <label>Promotional Text</label>

            </div>
            <span asp-validation-for="PromotionalText" class="text-danger"></span>
            <input asp-for="PromotionalText" class="form-control col-sm-10"/>
        </div>

        <div class="form-group">
            <div class="offset-md-2 col-md-10">
                <button type="submit">Update</button>
            </div>
        </div>

    </form>
}