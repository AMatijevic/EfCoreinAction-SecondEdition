{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  //The DemoSetup data controls how the application handles the database on startup
  "DemoSetup": {
    "UseInMemory": true,  //If true it a Sqlite in-memory database, otherwise it uses a SQL server database.
    "Migrate":  false,    //If true it will run a migration on the database, otherwise it will use context.Database.EnsureCreated to create the database
    "ManuallySeed": true  //If this is true then it will create the database and manually seed the database of no books are already in it.
  } 
}
